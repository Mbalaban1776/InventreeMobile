{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,               // Enable interop with ES modules
    "allowSyntheticDefaultImports": true,  // Allow default imports even when they don't exist in module
    "skipLibCheck": true,                  // Skip checking type definitions in node_modules
    "strict": false                        // Relax strict mode temporarily to resolve 3rd party module issues
  }
}
